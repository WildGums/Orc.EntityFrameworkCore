<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1</TargetFrameworks>
    <AssemblyName>Orc.EntityFrameworkCore</AssemblyName>
    <RootNamespace>Orc.EntityFrameworkCore</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.EntityFrameworkCore</PackageId>
    <PackageVersion>1.0.0-alpha0183</PackageVersion>
    <Description>Entity Framework Core extensions.</Description>
    <PackageTags>orc;entity;framework;ef;core</PackageTags>
  </PropertyGroup>
  
  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>05131DD0-CBF1-4E7E-9D2C-96B6DD472D70</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Catel.Core" Version="5.12.7" />
    <PackageReference Include="Catel.Fody" Version="4.4.4" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="6.2.4" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.6" Condition="'$(TargetFramework)' == 'netcoreapp3.0'"/>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="3.1.6" Condition="'$(TargetFramework)' == 'netcoreapp3.0'" /> 
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.6" Condition="'$(TargetFramework)' == 'netcoreapp3.1'"/>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="3.1.6" Condition="'$(TargetFramework)' == 'netcoreapp3.1'" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.0" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.2.1" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App"  />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.3" />
  </ItemGroup>
  
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>
